// schema.prisma

generator client {
	provider = "prisma-client-js"
	previewFeatures = ["postgresqlExtensions"] // Enable extensions
}

datasource db {
	provider = "postgresql"
	extensions = [postgis]
}

model University {
	id        String   @id @default(uuid())
	name      String
	boundary  Unsupported("geometry(Polygon, 4326)")? 

	hex HexTile[]
}

model HexTile {
	id        String  @id  @default(uuid())
	uniId     String
	status    String @default("active")   // "active", "destroyed", "shielded"
	health   Int @default(100)
	boundary  Unsupported("geometry(Polygon, 4326)")? 

  	uni University @relation(fields: [uniId], references: [id])
}